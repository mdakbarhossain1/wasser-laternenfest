{% stylesheet %}
  .privacy-policy-hero {
  position: relative;
  height: 100%;
  min-height: 500px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

@media (min-width: 900px) {
  .privacy-policy-hero {
    height: 80vh;
    min-height: 500px;
  }
}

.privacy-policy-hero-content {
  margin-top: auto;
  padding-bottom: 100px;
  z-index: 2;
  padding-left: 40px;
  padding-right: 40px;
}

@media (max-width: 992px) {
  .privacy-policy-hero-content {
    margin-top: 55px;
  }
}

.privacy-policy-hero-title {
  font-family: "Playfair Display", serif;
  font-weight: 700;
  font-size: 80px;
  line-height: 120%;
  margin-bottom: 30px;
  color: #fff; /* Replacing $white with white color */
}

@media (max-width: 768px) {
  .privacy-policy-hero-title {
    font-size: 40px;
    margin-bottom: 0;
  }
}

@media (max-width: 480px) {
  .privacy-policy-hero-title {
    font-size: 32px;
    margin-bottom: 0;
  }
}

{% endstylesheet %}

<section class="privacy-policy-hero"  style="
    background: linear-gradient(
        189.16deg,
        rgba(4, 4, 13, 0) 0%,
        rgb(4, 4, 13) 100%
      ),
      url('{{ 'privacy-policy-hero.png' | asset_url }}') center/cover no-repeat;
  ">
  <div class="container hero-content">
    <div class="row align-items-end">
      <div class="col-xl-7 col-12">
        <h1 class="font-80 hero-title">Privacy Policy</h1>
      </div>
      <div class="col-xl-5 col-12">
        <div class="event-card">
          <p class="event-description">
            We collect basic visitor data like IP address, browser type, and
            time of visit. If you register, we may also collect your name,
            email, and other relevant details.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>


