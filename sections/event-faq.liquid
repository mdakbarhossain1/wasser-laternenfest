{% stylesheet %}
  .event-page-got-question {
  padding: 60px 0;
}

@media (min-width: 900px) {
  .event-page-got-question {
    padding: 120px 0;
  }
}

.event-page-got-question .faq-item {
  margin-bottom: 24px;
  overflow: hidden;
}

.event-page-got-question .faq-item .faq-question {
  padding: 24px;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.089);
  background: rgba(255, 255, 255, 0.04);
  cursor: pointer;
}

.event-page-got-question .faq-item .faq-question h2 {
  margin: 0;
  font-family: Inter, sans-serif;
}

.event-page-got-question .faq-item .toggle-icon {
  transition: transform 0.3s ease;
}

.event-page-got-question .faq-item .faq-ans {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  padding: 0 24px;
  border-radius: 12px;
  background: linear-gradient(90deg, #f8b133 0%, #e5332a 99.61%);
  transition: all 0.5s ease;
  pointer-events: none;
}

.event-page-got-question .faq-item .faq-ans h2 {
  margin: 0;
  font-family: Inter, sans-serif;
}

.event-page-got-question .faq-item .faq-ans .ans {
  color: #f4f5f7;
  font-family: Inter, sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 150%;
}

@media (min-width: 1000px) {
  .event-page-got-question .faq-item .faq-ans .ans {
    font-size: 24px;
  }
}

.event-page-got-question .faq-item.active .faq-question {
  display: none;
}

.event-page-got-question .faq-item.active .faq-ans {
  max-height: 1000px;
  opacity: 1;
  padding-top: 24px;
  padding-bottom: 24px;
  pointer-events: auto;
}

.pb-56 {
  padding-bottom: 56px;
}

/* Small screens (phones) */
@media (max-width: 640px) {
  .pb-56 {
    padding-bottom: 32px;
  }
}

/* Medium screens (tablets) */
@media (min-width: 641px) and (max-width: 1024px) {
  .pb-56 {
    padding-bottom: 48px;
  }
}

/* Large screens (desktops) */
@media (min-width: 1025px) {
  .pb-56 {
    padding-bottom: 56px;
  }
}

{% endstylesheet %}

