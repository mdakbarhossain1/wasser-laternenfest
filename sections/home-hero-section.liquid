{% stylesheet %}
  .hero {
    position: relative;
    height: 100vh;
    min-height: 700px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .hero-content {
    margin-top: auto;
    padding-bottom: 100px;
    z-index: 2;
    padding-left: 40px;
    padding-right: 40px;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 80px;
    line-height: 120%;
    margin-bottom: 30px;
    color: #ffffff;
  }

  .event-card {
    background: rgba(43, 43, 43, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 32px;
    padding: 24px;
    backdrop-filter: blur(5px);
  }

  .event-date {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 32px;
    font-size: 20px;
  }

  .event-description {
    font-size: 18px;
    line-height: 150%;
    margin-bottom: 24px;
    color: #ffffff;
  }

  .date-number {
    font-size: 80px;
    line-height: 100%;
    color: #f8b133;
  }

  .date-month {
    font-size: 32px;
    line-height: 100%;
    color: #ffffff;
  }

  .btn-gradient {
    background: linear-gradient(90deg, #f8b133, #ff7e5f);
    border: none;
    border-radius: 30px;
    padding: 20px;
    font-weight: 600;
    font-size: 18px;
    line-height: 100%;
    color: #ffffff;
    transition: all 0.3s ease;
  }

  .btn-gradient:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(229, 51, 42, 0.4);
  }

  .arrow-btn-gradient {
    background: linear-gradient(90deg, #f8b133, #ff7e5f);
    border: none;
    border-radius: 99px;
    padding: 18px;
    line-height: 100%;
    color: #ffffff;
    transition: all 0.3s ease;
  }

  .arrow-btn-gradient:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(229, 51, 42, 0.4);
  }

  .arrow-border-btn {
    border: 2px solid #f8b133;
    border-radius: 99px;
    padding: 18px;
    backdrop-filter: blur(5px);
    transition: all 0.3s ease;
  }

  .arrow-border-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(229, 51, 42, 0.4);
  }

  /* Responsive Styles */
  @media (min-width: 1200px) {
    .hero {
      min-height: 900px;
    }
  }

  @media (max-width: 1200px) {
    .date-number {
      font-size: 64px;
    }
  }

  @media (max-width: 992px) {
    .hero {
      min-height: auto;
      padding-bottom: 60px;
      height: auto;
    }
    .hero-content {
      margin-top: 55px;
      padding-bottom: 60px;
    }
    .hero-title {
      margin-bottom: 30px;
    }
    .event-card {
      padding: 20px;
      border-radius: 24px;
    }
    .event-date {
      font-size: 18px;
      gap: 12px;
    }
    .event-description {
      font-size: 16px;
      margin-bottom: 20px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 600px;
    }
    .hero-title {
      font-size: 40px;
      margin-bottom: 0px;
    }
    .event-card {
      padding: 16px;
      border-radius: 20px;
    }
    .event-date {
      font-size: 16px;
      gap: 10px;
    }
    .date-number {
      font-size: 48px;
    }
    .date-month {
      font-size: 24px;
    }
  }

  @media (max-width: 576px) {
    .date-number {
      font-size: 36px;
    }
  }

  @media (max-height: 700px) {
    .hero {
      min-height: 700px;
    }
    .hero-content {
      padding-bottom: 60px;
    }
  }

  @media (max-width: 700px) {
    .btn-gradient {
      width: 100%;
    }
  }
{% endstylesheet %}

