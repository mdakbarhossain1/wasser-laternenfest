{% stylesheet %}
  .press-hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: flex-end;
    
    padding: 40px;
  }

  .press-hero-content {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .press-hero-title {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: clamp(32px, 5vw, 80px);
    line-height: 1.2;
    color: #fff;
    margin: 0;
  }

  .event-card-pressandmedia {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 24px;
    border-radius: 12px;
    max-width: 500px;
  }

  .event-description {
    color: #fff;
    margin-bottom: 20px;
    font-size: 18px;
  }

  .btn-gradient {
    background: linear-gradient(90deg, #f8b133 0%, #e5332a 99.61%);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .btn-gradient:hover {
    transform: translateY(-2px);
  }

  @media (min-width: 992px) {
    .press-hero-content {
      grid-template-columns: 2fr 1fr;
    }
    
    .press-hero {
      min-height: 700px;
      padding-bottom: 100px;
    }
  }
{% endstylesheet %}

<section class="press-hero" style="background: linear-gradient(189.16deg, rgba(4, 4, 13, 0) 0%, #0b0b0b 100%), url('{{ 'press-media-hero-banner.jpg' | asset_url }}') center/cover no-repeat;">
  <div class="press-hero-content">
    <h1 class="press-hero-title">Press and media</h1>
    <div class="event-card-pressandmedia">
      <p class="event-description">
        Explore stories, photos, and videos that share the magic of the Water Lantern Festival.
      </p>
      <button class="btn btn-gradient">Buy Tickets</button>
    </div>
  </div>
</section>

