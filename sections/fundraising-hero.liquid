{% stylesheet %}
    .fundraising-hero {
    position: relative;
    height: auto;
    background: linear-gradient(189.16deg, rgba(4, 4, 13, 0) 0%, #000b1a 100%),
                url("../img/fundraising-hero.png") center/cover no-repeat;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 1000px) {
    .fundraising-hero {
      height: auto;
      min-height: 700px;
    }
  }

  .fundraising-hero-content {
    margin-top: auto;
    z-index: 2;
    padding-left: 40px;
    padding-right: 40px;
  }

  @media (max-width: 992px) {
    .fundraising-hero-content {
      margin-top: 55px;
    }
  }

  .fundraising-hero-title {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: 80px;
    line-height: 120%;
    margin-bottom: 30px;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    .fundraising-hero-title {
      font-size: 40px;
      margin-bottom: 0px;
    }
  }

  @media (max-width: 480px) {
    .fundraising-hero-title {
      font-size: 32px;
      margin-bottom: 0px;
    }
  }
{% endstylesheet %}
