{% stylesheet %}
    .checkout-banner {
    position: relative;
    height: auto;
    background: linear-gradient(189.16deg, rgba(4, 4, 13, 0) 0%, #04040d 100%),
      url("../img/event-page-hero-img.png") center/cover no-repeat;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .checkout-banner-content {
    margin-top: auto;
    z-index: 2;
    padding-left: 40px;
    padding-right: 40px;
  }

  .checkout-banner-title {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: 80px;
    line-height: 120%;
    margin-bottom: 30px;
    color: #ffffff;
  }

  @media (min-width: 1200px) {
    .checkout-banner {
      height: auto;
      min-height: 400px;
    }
  }

  @media (max-width: 992px) {
    .checkout-banner-content {
      margin-top: 55px;
    }
  }

  @media (max-width: 768px) {
    .checkout-banner-title {
      font-size: 40px;
      margin-bottom: 0;
    }
  }

  @media (max-width: 480px) {
    .checkout-banner-title {
      font-size: 32px;
      margin-bottom: 0;
    }
  }
{% endstylesheet %}

<section
  class="checkout-banner"
  style="
        background: linear-gradient(189.16deg, rgba(4, 4, 13, 0) 0%, #0a0a0f 100%),
    url({{ 'event-page-hero-img.png' | asset_url }}); center/cover no-repeat;
  "
>
  <div class="container hero-content">
    <h1 class="hero-title">Checkout</h1>
  </div>
</section>

