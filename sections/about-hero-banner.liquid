{% stylesheet %}
.about-hero-banner {
  position: relative;
  height: 100%;
  min-height: 500px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: #0a0a0f;
}

@media (min-width: 900px) {
  .about-hero-banner {
    height: 90vh;
    min-height: 700px;
  }
}

.hero-content {
  margin-top: auto;
  padding-bottom: 100px;
  z-index: 2;
  padding-left: 40px;
  padding-right: 40px;
  position: relative;
}

@media (max-width: 992px) {
  .hero-content {
    margin-top: 55px;
  }
}

.hero-title {
  font-family: "Playfair Display", serif;
  font-weight: 700;
  font-size: 80px;
  line-height: 120%;
  margin-bottom: 30px;
  color: #ffffff;
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 40px;
    margin-bottom: 0;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 32px;
    margin-bottom: 0;
  }
}

.event-card {
  background: rgba(255, 255, 255, 0.05);
  padding: 24px;
  border-radius: 12px;
  color: #fff;
  backdrop-filter: blur(4px);
}

.btn-gradient {
  background: linear-gradient(90deg, #ff7a18, #af002d 71%);
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 30px;
  font-weight: bold;
  cursor: pointer;
  display: inline-block;
  margin-top: 16px;
}
{% endstylesheet %}

<section
  class="about-hero-banner"
  style="background-image: linear-gradient(189.16deg, rgba(4, 4, 13, 0) 0%, #0a0a0f 100%), url({{ 'about-section-hero.png' | asset_url }});"
>
  <div class="container hero-content">
    <div class="row align-items-center justify-content-between">
      <div class="col-xl-7 col-12">
        <h1 class="hero-title">
          A Night of Light, <br />
          Love & Connection
        </h1>
      </div>
      <div class="col-xl-4 col-12">
        <div class="event-card">
          <p class="event-description">
            Celebrating Hope Across the Water. At the heart of the Water Lantern
            Festival lies a simple but powerful idea: people from all walks of
            life coming together to celebrate hope, peace, and community through
            the beauty of floating lanterns.
          </p>
          <button class="btn btn-gradient">Buy Tickets</button>
        </div>
      </div>
    </div>
  </div>
</section>

