{% stylesheet %}
.why-this-event-matters {
  padding: 60px 0;
}

@media (min-width: 900px) {
  .why-this-event-matters {
    padding: 120px 0;
  }
}

.why-this-event-matters-img {
  height: 100%;
  object-fit: cover;
  border-radius: 32px;
}

@media (min-width: 1000px) {
  .why-this-event-matters-img {
    min-height: 620px;
    width: 757px;
  }
}

.text-color-orange-300 {
    color: #ffa500;
}

.timing-card {
  display: flex;
  padding: 16px;
  align-items: center;
  justify-content: center;
  gap: 32px;
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(43, 43, 43, 0.1);
  backdrop-filter: blur(5px);
  margin-bottom: 40px;
}

.timing-card h2,
.timing-card span {
  font-size: 30px;
}

.timing-card p {
  font-size: 20px;
}

@media (min-width: 1200px) {
  .timing-card {
    padding: 24px;
    border-radius: 32px;
  }
  .timing-card h2,
  .timing-card span {
    font-size: 80px;
  }
  .timing-card p {
    font-size: 24px;
  }
}

.text-color-bd {
    color: #a3a7bd;
}

.ticket-button {
  background: linear-gradient(90deg, #f8b133 0%, #e5332a 100%);
  border-radius: 30px;
  padding: 20px;
  width: 100%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  color: white;
  font-family: "Inter", sans-serif;
  font-size: 18px;
  font-weight: 600;
  line-height: 1;
  text-align: center;
  transition: transform 0.2s ease;
}

.ticket-button:hover {
  transform: scale(1.05);
}

@media (min-width: 1200px) {
  .ticket-button {
    width: 184px;
    height: 60px;
  }
}

.font-56 {
  font-size: 30px;
}
@media (min-width: 900px) {
  .font-56 {
    font-size: 56px !important;
  }
}

.pr-30 {
  padding-right: 0;
}
@media (min-width: 1000px) {
  .pr-30 {
    padding-right: 30px;
  }
}

.pl-30 {
  padding-left: 0;
}
@media (min-width: 1000px) {
  .pl-30 {
    padding-left: 30px;
  }
}

{% endstylesheet %}

