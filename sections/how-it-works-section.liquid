  }

  @media (max-width: 991px) {
    .col-lg-2,
    .col-lg-5 {
      width: 100%;
    }

    .col-lg-2 {
      order: 3;
    }
  }

  @keyframes rotateCircle {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
{% endstylesheet %}

