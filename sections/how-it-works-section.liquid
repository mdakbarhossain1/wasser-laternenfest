{% stylesheet %}
  /* How It Works Container */
  .how-it-works-container {
    padding: 120px 0;
    background-color: #000;
    color: #fff;
    overflow: hidden;
  }

  .how-it-works-title {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    line-height: 100%;
    margin-bottom: 40px;
    font-size: 30px;
  }

  @media (min-width: 900px) {
    .how-it-works-title {
      font-size: 56px;
      margin-bottom: 56px;
    }
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 194px;
  }

  @media (max-width: 992px) {
    .steps-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  .step-card {
    position: relative;
    background: linear-gradient(180deg, rgba(255, 165, 0, 0.12) 0%, rgba(255, 165, 0, 0.02) 100%);
    border-radius: 32px;
    padding: 32px;
    overflow: hidden;
  }

  .step-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 32px;
    padding: 1px;
    background: linear-gradient(
      108.16deg,
      rgba(255, 165, 0, 0.4) 0%,
      rgba(255, 165, 0, 0) 36.54%,
      rgba(255, 165, 0, 0) 69.71%,
      rgba(255, 165, 0, 0.4) 100%
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .step-number {
    background: linear-gradient(to right, #f8b133, #ff9500);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Playfair Display', serif;
    font-size: 60px;
    font-weight: 600;
    line-height: 100%;
    text-align: right;
    align-self: flex-end;
  }

  @media (max-width: 768px) {
    .step-number {
      font-size: 48px;
    }
  }

  .step-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .step-title {
    color: #fff;
    font-family: 'Inter', sans-serif;
    font-size: 28px;
    font-weight: 500;
    line-height: 130%;
    margin: 0;
  }

  @media (min-width: 900px) {
    .step-title {
      font-size: 40px;
    }
  }

  .step-description {
    color: #b3b3b3;
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    line-height: 150%;
    margin: 0;
  }

  @media (max-width: 768px) {
    .step-description {
      font-size: 16px;
    }
    .step-card {
      padding: 24px;
    }
  }

  .book-now-card-wrapper {
    position: relative;
  }

  .book-now-wrapper {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .book-now-circle {
    width: 283.68px;
    height: 283.68px;
    position: relative;
    box-sizing: border-box;
  }

  @media (max-width: 992px) {
    .book-now-circle {
      display: none;
    }
  }

  .outer-circle {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .bg-circle {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .inner-circle-wrapper {
    position: absolute;
    width: 141.84px;
    height: 141.84px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .inner-circle {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #ffa500;
    position: absolute;
    top: 0;
    left: 0;
  }

  .arrow {
    width: 79.43px;
    height: 79.43px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    aspect-ratio: 1;
  }

  .text-circle {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    animation: rotateCircle 10s linear infinite;
  }

  .text-circle .char {
    color: #f4f5f7;
    text-align: center;
    font-family: 'Inter-Regular', sans-serif;
    font-size: 40.95px;
    font-weight: 400;
    position: absolute;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    transform-origin: 0 0;
  }

