{% stylesheet %}
  .footer {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
    border-radius: 40px 40px 0 0;
    padding: 80px 120px 32px;
  }

  @media (max-width: 1024px) {
    .footer {
      padding: 60px 60px 24px;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 40px 24px 20px;
    }
  }

  .footer .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    row-gap: 48px;
    column-gap: 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 40px;
  }

  .footer .brand-section,
  .footer .links-section,
  .footer .newsletter-section {
    flex: 1 1 240px;
  }

  @media (max-width: 768px) {
    .footer .brand-section,
    .footer .links-section,
    .footer .newsletter-section {
      flex: 1 1 100%;
    }
  }

  .footer .brand-section {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .footer .brand-section .brand-info {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer .brand-section .logo-container {
    width: 182px;
    height: auto;
  }

  .footer .brand-section .tagline {
    color: #a3a7bd;
    font-family: 'Inter-Regular', sans-serif;
    font-size: 18px;
    line-height: 150%;
  }

  .footer .brand-section .social-media {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .footer .social-icon .icon-background {
    position: relative;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .footer .social-icon .icon-background::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    padding: 1px;
    background: linear-gradient(90deg, #f8b133 0%, #e5332a 99.61%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .footer .social-icon .icon-background img {
    width: 24px;
    height: 24px;
  }

  .footer .social-icon .icon-background.active {
    background: linear-gradient(90deg, #f8b133 0%, #e5332a 99.61%);
    border: none;
  }

  .footer .links-section .section-title,
  .footer .newsletter-section .newsletter-info .section-title {
    color: #fff;
    font-family: 'Inter-Medium', sans-serif;
    font-size: 20px;
    margin-bottom: 16px;
  }

  .footer .links-section .links-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer .links-section .links-list li a {
    color: #a3a7bd;
    font-family: 'Inter-Regular', sans-serif;
    font-size: 16px;
    text-decoration: none;
  }

  .footer .links-section .links-list li a:hover {
    text-decoration: underline;
  }

  .footer .newsletter-section {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .footer .newsletter-section .newsletter-info p {
    color: #a3a7bd;
    font-family: 'Inter-Regular', sans-serif;
    font-size: 16px;
  }

  .footer .newsletter-section .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer .newsletter-section .newsletter-form input {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 30px;
    border: 1px solid rgba(165, 165, 171, 0.1);
    padding: 14px 18px;
    height: 48px;
    color: #a3a7bd;
    font-family: 'Inter-Medium', sans-serif;
    font-size: 14px;
  }

  .footer .newsletter-section .newsletter-form input::placeholder {
    color: #a3a7bd;
  }

  .footer .newsletter-section .newsletter-form .subscribe-button {
    background: linear-gradient(90deg, #f8b133 0%, #e5332a 99.61%);
    border-radius: 30px;
    padding: 14px;
    height: 48px;
    color: #fff;
    font-family: 'Inter-Medium', sans-serif;
    font-size: 14px;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .footer .newsletter-section .newsletter-form .subscribe-button:hover {
    opacity: 0.9;
  }

  .footer .copyright {
    margin-top: 24px;
    color: #a3a7bd;
    text-align: center;
    font-family: 'Inter-Regular', sans-serif;
    font-size: 14px;
  }
{% endstylesheet %}

