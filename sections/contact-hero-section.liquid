{% stylesheet %}
    .contact-hero-page {
    position: relative;
    height: auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  @media (min-width: 1200px) {
    .contact-hero-page {
      min-height: 700px;
    }
  }

  .contact-hero-page .hero-content {
    margin-top: auto;
    z-index: 2;
    padding-left: 40px;
    padding-right: 40px;
  }

  @media (max-width: 992px) {
    .contact-hero-page .hero-content {
      margin-top: 55px;
    }
  }

  .contact-hero-page .hero-title {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: 80px;
    line-height: 120%;
    margin-bottom: 30px;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    .contact-hero-page .hero-title {
      font-size: 40px;
      margin-bottom: 0px;
    }
  }

  @media (max-width: 480px) {
    .contact-hero-page .hero-title {
      font-size: 32px;
      margin-bottom: 0px;
    }
  }
{% endstylesheet %}

