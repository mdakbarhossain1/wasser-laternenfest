{% stylesheet %}
      .mb-40 {
        margin-bottom: 40px;
      }

      @media (max-width: 425px) {
        .mb-40 {
          margin-bottom: 24px;
        }
      }

      .pr-113 {
      padding-right: 0px;
    }

    @media (min-width: 1000px) {
      .pr-113 {
        padding-right: 113px;
      }
    }

    .card {
      position: relative;
      background: linear-gradient(
        180deg,
        rgba(255, 165, 0, 0.12) 0%,
        rgba(255, 165, 0, 0.02) 100%
      );
      border-radius: 24px;
      padding: 24px;
      overflow: hidden;
    }

    .card::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      border-radius: 24px;
      padding: 1px;
      background: linear-gradient(
        108.16deg,
        rgba(255, 165, 0, 0.4) 0%,
        rgba(255, 165, 0, 0) 36.54%,
        rgba(255, 165, 0, 0) 69.71%,
        rgba(255, 165, 0, 0.4) 100%
      );
      -webkit-mask: linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
    }
        .enviromental-banner-img {
          position: relative;
          min-height: auto;
          display: flex;
          flex-direction: column;
          overflow: hidden;
        }

        @media (min-width: 1000px) {
          .enviromental-banner-img {
            min-height: 700px;
          }
        }

        .common-card-section {
          padding: 60px 0px;
        }

        @media (min-width: 1200px) {
          .common-card-section {
            padding: 120px 0px;
          }
        }

        .text-color-f7 {
      color: #f4f5f7;
  }
{% endstylesheet %}

